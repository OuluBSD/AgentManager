#!/usr/bin/env node

// Nexus CLI Entry Point
// This is the main entry point for the Nexus CLI
// It uses tsx to run TypeScript directly

import { spawn } from 'child_process';
import { fileURLToPath } from 'url';
import { dirname, join } from 'path';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// Use tsx to run the main TypeScript file directly with --import
const nodeArgs = [
  '--import', 'tsx',
  join(__dirname, '..', 'src', 'main.ts'),
  ...process.argv.slice(2)
];

const child = spawn('node', nodeArgs, {
  stdio: 'inherit',
  cwd: process.cwd()
});

child.on('error', (err) => {
  console.error('Failed to start Nexus CLI:', err.message);
  process.exit(1);
});

child.on('close', (code) => {
  process.exit(code || 0);
});