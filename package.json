{
  "name": "nexus-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev:frontend": "pnpm --filter nexus-frontend dev",
    "dev:backend": "pnpm --filter nexus-backend dev",
    "lint:frontend": "pnpm --filter nexus-frontend lint",
    "build:frontend": "pnpm --filter nexus-frontend build",
    "lint:prettier": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css,scss,html,yml,yaml}\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss,html,yml,yaml}\"",
    "db:generate": "drizzle-kit generate",
    "test": "pnpm -r test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.7",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml,html}": "prettier --write"
  }
}
